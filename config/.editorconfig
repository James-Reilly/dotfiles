root = true

[*]
charset=utf-8
indent_style=space
indent_size=4
tab_width=4
end_of_line=lf
trim_trailing_whitespace=true
insert_final_newline=true

[*.py]
indent_style = space
indent_size = 4

[*.{hy,js,html}]
indent_style = space
indent_size = 2

[*.{toml,rs}]
indent_style=tab
indent_size=4

[Makefile]
indent_style = tab
